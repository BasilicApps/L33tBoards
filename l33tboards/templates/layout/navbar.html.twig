{% block navbar %}
<nav class="navbar navbar-dark bg-dark sticky-top">
    <a class="navbar-brand" href="{{ url('home') }}">
        <img src="{{ asset('/img/icon32.png') }}" width="30" height="30" class="d-inline-block align-top" alt="">
        L33TBOARDS
    </a>
    <div class="text-center" style="min-width:50%">
        <div class="p-1 bg-light rounded rounded-pill shadow-sm">
            <div class="input-group">
                <div class="input-group-prepend">
                    <button id="button-addon2" type="submit" class="btn btn-link text-warning"><i class="fa fa-search"></i></button>
                </div>
                <input type="search" placeholder="Search..." aria-describedby="button-addon2" class="form-control form-search-box border-0 bg-light">
            </div>
        </div>
    </div>
    <div class="text-right">
        {% if app.user %}
            <div class="btn-group">
                <button type="button" class="btn btn-primary"><i class="fa fa-user mr-2"></i> {{ app.user.getUsername() }}</button>
                <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="sr-only">Toggle Dropdown</span>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#">My Profile</a>
                    <a class="dropdown-item" href="#">Account settings</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ url('app_logout') }}">Logout</a>
                </div>
            </div>
            <a href="{{ url('app_logout') }}" class="btn btn-danger"><i class="fa fa-power-off"></i></a>
        {% else %}
            <a href="{{ url('app_login') }}" class="btn btn-outline-primary">Login</a>
            <a href="{{ url('app_register') }}" class="btn btn-primary">Register</a>
        {% endif %}
    </div>
</nav>
{% endblock %}